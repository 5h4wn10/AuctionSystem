@model ProjectApp.Models.BidVM

<h1>Place a Bid on Auction @Model.AuctionId</h1>

<p><strong>Starting Price:</strong> @Model.StartingPrice</p>
<p><strong>Highest Bid:</strong> @Model.HighestBidAmount</p>

<form asp-action="PlaceBid" method="post">
    <div class="form-group">
        <label for="BidAmount">Your Bid Amount:</label>
        <input type="number" asp-for="BidAmount" class="form-control" step="0.01" min="0" />
        <span asp-validation-for="BidAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="AuctionId" />
        <button type="submit" class="btn btn-primary">Place Bid</button>
    </div>
</form>

<a asp-action="Details" asp-route-id="@Model.AuctionId">Details</a>
| <a asp-action="ActiveAuctions">See All Active Auctions</a>