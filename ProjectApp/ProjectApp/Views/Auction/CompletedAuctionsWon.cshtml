@using ProjectApp.Services
@model IEnumerable<ProjectApp.Models.AuctionVM>

@{
ViewData["Title"] = "Won Auctions";
}

<h1>Auction Wins</h1>


<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.WinningPrice)</th>
        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Description)</td>
        <td>@Html.DisplayFor(modelItem => item.WinningPrice)</td>
        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        </td>
    </tr>
    }
    </tbody>
</table>

<a asp-action="Index">Go Back to Homepage</a> 
